{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">

        <p>choose a project and enter a date to view the time period in which most people were working on the given project.:
        <div class="container">
        <div class="row">
            <form action="/peaktime" method="post">
              <div class="form-group">
                <label for="sel1">Choose a project:</label>
                <select class="form-control" id="project" name="project">
                    <option value="">--</option>
                    {% for project in projects %}
                        <option value="{{ project.id }}">{{ project.name }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
            <label for="sel1">Enter a date format: yyyy-mm-dd</label>

                    <div class="form-group">
                        <div class='input-group date' id='datetimepicker1'>
                            <input type='text' name='day' class="form-control" />
                            <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
                    </span>
                        </div>
                    </div>

            </div>
        </div>
        </div>

        <input type="submit" class="btn btn-info" value="Submit">

    </div>
{% endblock %}